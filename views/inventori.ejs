<!-- include header -->
<%- include('auth/header') %>

<!-- include nav -->
<%- include('auth/nav') %>

<!-- Begin Content -->

<div class="container-fluid">

<div class="mt-3 mb-2"><a href="/add" class="btn btn-dark btn-sm">Tambah Data</a></div>
<table class="table table-striped text-center" id="tabel">
    <thead>
      <tr>
        <th scope="col">Kode</th>
        <th scope="col">Nama</th>
        <th scope="col">Jumlah</th>
        <th scope="col">Harga </th>
        <th scope="col" class="sorting_disabled">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% 
      inventori.forEach((inventoris) => { %>
      <tr>  
        <td scope="row"><%= inventoris.kode %></th>
        <td><%= inventoris.nama %></td>
        <td><%= inventoris.jumlah %></td>
        <td><%= inventoris.keterangan %></td>
        <td class="text-center">
          <a href="/ubah/<%= inventoris.kode %>" class='btn btn-success'><i class="fas fa-edit"></i> Ubah</a>
          <a href="/hapus/<%= inventoris.kode %>" class='btn btn-danger'><i class="fas fa-trash-alt"></i> Hapus</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

</div>

<!-- End Content -->

<!-- include footer -->
<%- include('auth/footer') %>